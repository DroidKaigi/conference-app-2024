{
  "name": "typescript-action",
  "version": "0.0.0",
  "private": true,
  "description": "TypeScript template action",
  "main": "lib/main.js",
  "scripts": {
    "build": "rm -fr lib/ && tsc",
    "format": "prettier --write '**/*.ts'",
    "format-check": "prettier --check '**/*.ts'",
    "lint": "eslint src/**/*.ts",
    "lint::fix": "eslint --fix src/**/*.ts",
    "test": "jest",
    "test::package": "npm run package && jest",
    "package": "npm run prepare::package && ./package.sh",
    "prepare::package": "npm run format && npm run lint"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/DroidKaigi/conference-app-2021.git"
  },
  "keywords": [
    "actions",
    "node"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@actions/artifact": "^1.1.1",
    "@actions/core": "^1.10.0",
    "@actions/exec": "^1.1.1",
    "@actions/github": "^5.1.1",
    "@actions/glob": "^0.4.0",
    "form-data": "^4.0.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.3",
    "@types/node": "^20.4.8",
    "@types/node-fetch": "^2.6.4",
    "@typescript-eslint/parser": "^6.2.1",
    "@vercel/ncc": "^0.36.1",
    "eslint": "^8.46.0",
    "eslint-plugin-github": "^4.9.2",
    "eslint-plugin-jest": "^27.2.3",
    "jest": "^29.6.2",
    "jest-circus": "^29.6.2",
    "js-yaml": "^4.1.0",
    "prettier": "3.0.1",
    "ts-jest": "^29.1.1",
    "typescript": "^5.1.6"
  }
}
